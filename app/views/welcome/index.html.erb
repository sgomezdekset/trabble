<div class="bannertron">
  <div class="container">
  <% if user_signed_in = false %>
    <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %> |
  <% else %>
    Welcome <%= current_user.name %> | 
    <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
  <% end %>
    <h1>Plan a group trip.</h1>
    <p>Coordinate effortlessly with your friends and family.</p>
    <% if user_signed_in? %>
      <%= link_to 'Logout', destroy_user_session_path, :method => :delete, class: "mynav" %>
    <% else %>
      <%= current_user.name %>
      <%= link_to 'Login', new_user_session_path, class: "mynav"  %>
    <% end %>
  </div>
</div>

